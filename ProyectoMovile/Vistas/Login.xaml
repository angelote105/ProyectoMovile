<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoMovile.Vistas.Login"
             Title="Login">
    <VerticalStackLayout>

        <Label 
            Text="Ingreso al Sistema"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="25"/>


        <Frame>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <Entry x:Name="txtUser" Placeholder="Ingrese el usuario" Grid.Row="0" Grid.Column="0"/>
                <Entry x:Name="txtPassword" Placeholder="Ingrese la contraseÃ±a" IsPassword="True" Grid.Row="1" Grid.Column="0"/>
                <Button x:Name="btnAutenticar" Text="Autenticar" Clicked="btnAutenticar_Clicked" Grid.Row="2" Grid.Column="1" BackgroundColor="DarkSlateBlue"/>


            </Grid>
        </Frame>

        <Label Text=" -------------------------------- O ---------------------------" HorizontalOptions="Center" FontSize="18" FontAttributes="Bold"/>



    </VerticalStackLayout>
</ContentPage>