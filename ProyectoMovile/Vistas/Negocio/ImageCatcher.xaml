<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoMovile.Vistas.Negocio.ImageCatcher"
             Title="ImageCatcher">
    <ScrollView>
        <VerticalStackLayout>
            <Label 
            Text="Interview Pro"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            TextColor="Purple"/>

            <StackLayout Padding="20">
                <Label Text="Reconocimiento Facial y Emocional"
                       FontSize="Large"
                       HorizontalOptions="Center" />

                <Button 
                        x:Name="btnStar"
                        Text="Capturar Imagen"
                        Clicked="btnStar_Clicked" />

                <Label x:Name="EmotionLabel" Text="EmociÃ³n:" />
                <Label x:Name="StatusLabel" Text="Status:" />

                <Entry x:Name="txtCliente" Placeholder="Ingrese cliente" />
                <Entry x:Name="txtEntrevistador" Placeholder="Ingrese entrevistador" />
                <Button
                       x:Name="btnSave"
                       Text="Guardar Datos"
                       Clicked="btnSave_Clicked" />
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>